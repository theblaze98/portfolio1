---
import { ViewTransitions } from "astro:transitions";
import SEO from "../components/SEO.astro";
import Github from "../components/icons/Github.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Mail from "../components/icons/Mail.astro";
import MapPin from "../components/icons/MapPin.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>

		<SEO title={title} />

		<ViewTransitions />
	</head>
	<body
		class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-blue-950 text-white"
	>
		<slot />
		<footer
			class="mt-16 bg-gray-900 text-white px-12 py-12 border-t border-gray-800"
		>
			<div class="container mx-auto px-4">
				<div class="flex flex-wrap justify-center  items-center">
					<div class="w-full md:w-1/2 mb-6 md:mb-0">
						<h3 class="text-2xl font-bold mb-4">Dionicio Vargas</h3>
						<p class="mb-4">Desarrollador Web Full Stack</p>
						<div class="flex space-x-4">
							<a
								href="https://github.com/theblaze98"
								target="_blank"
								rel="noopener noreferrer"
								aria-label="GitHub"
								class="hover:text-blue-300 transition-colors"
							>
								<Github />
							</a>
							<a
								href="https://www.linkedin.com/in/dionicio-vargas-832821237/"
								target="_blank"
								rel="noopener noreferrer"
								aria-label="LinkedIn"
								class="hover:text-blue-300 transition-colors"
							>
								<LinkedIn />
							</a>
						</div>
					</div>
					<div class="w-full md:w-1/2 mb-6 md:mb-0">
						<h4 class="text-xl font-semibold mb-4">Contacto</h4>
						<ul class="space-y-2">
							<li class="flex items-center">
								<MapPin class="w-5 h-5 mr-2" />
								<span>Ciudad, Pa√≠s</span>
							</li>
							<li class="flex items-center">
								<Mail class="w-5 h-5 mr-2" />
								<a
									href="mailto:dioniciovargas1226@gmail.com"
									class="hover:underline"
									>dioniciovargas1226@gmail.com</a
								>
							</li>
						</ul>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-800 text-center">
					<p>
						&copy; 2023 Dionicio Vargas. Todos los derechos
						reservados.
					</p>
				</div>
			</div>
		</footer>
		<style is:global>
			body {
				font-family: "Poppins", Arial, Helvetica, sans-serif;
			}
		</style>
	</body>
</html>
