---
import { ViewTransitions } from "astro:transitions";
import SEO from "../components/SEO.astro";
import Github from "../components/icons/Github.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Mail from "../components/icons/Mail.astro";
import MapPin from "../components/icons/MapPin.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta
			name="google-site-verification"
			content="d0-XGSNNymxfxwKjS7wMIzqu_OUWHujjJZ9YVPM2_YY"
		/>
		<link
			rel="icon"
			href="https://dionicio.vercel.app/favicon.jpeg"
			sizes="32x32"
			type="image/jpeg"
		/>

		<SEO
			title={title}
			description="Dionicio Vargas es un desarrollador web dedicado con m치s de un a침o de experiencia, especializado en crear soluciones web innovadoras, r치pidas y eficientes que mejoran la experiencia del usuario."
			image="https://dionicio.vercel.app/image.webp"
			keywords="dionicio, vargas, developer, programador, desarrollador, web, desarrollo,  soluciones, programaci칩n, portfolio, desarrollador, full-stack"
			author="Dionicio Vargas"
			robots="index, follow"
			themeColor="1E40AF"
			url="https://dionicio.vercel.app"
			siteName="Dionicio Vargas - Desarrollador Web"
		/>

		<ViewTransitions />
	</head>
	<body
		class="min-h-screen bg-gradient-to-br from-gray-950 via-gray-900 to-blue-950 text-white"
	>
		<slot />
		<footer
			class="mt-16 bg-gray-900 text-white px-12 py-12 border-t border-gray-800"
		>
			<div class="container mx-auto px-4">
				<div class="flex flex-col items-center">
					<h3 class="text-2xl font-bold mb-4">Dionicio Vargas</h3>
					<p class="mb-4">Desarrollador Web Full Stack</p>
					<div class="flex space-x-4 mb-4">
						<a
							href="https://github.com/theblaze98"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="GitHub"
							class="hover:text-blue-300 transition-colors"
						>
							<Github class="w-6 h-6" />
						</a>
						<a
							href="https://www.linkedin.com/in/dionicio-vargas-832821237/"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="LinkedIn"
							class="hover:text-blue-300 transition-colors"
						>
							<LinkedIn class="w-6 h-6" />
						</a>
						<a
							href="mailto:dioniciovargas1226@gmail.com"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="LinkedIn"
							class="hover:text-blue-300 transition-colors"
						>
							<Mail class="w-6 h-6" />
						</a>
					</div>
					<div class="text-center">
						<div class="flex items-center justify-center mb-2">
							<div class="mr-2">
								<MapPin />
							</div>
							<span>Venezuela</span>
						</div>
					</div>
				</div>
				<div class="mt-8 pt-8 border-t border-gray-700 text-center">
					<p>&copy; 2024 Dionicio Vargas. Todos los derechos reservados.</p>
				</div>
			</div>
		</footer>
		<style is:global>
			body {
				font-family: "Poppins", Arial, Helvetica, sans-serif;
			}
		</style>
	</body>
</html>
